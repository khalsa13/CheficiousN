<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        android:fitsSystemWindows="true"
        tools:context="com.example.anshul.cheficiousn.MainActivity">




        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="140dp"
            android:layout_height="103dp"
            android:onClick="veg"
           android:layout_marginStart="30dp"
            android:layout_marginTop="240dp"
            card_view:cardCornerRadius="4dp"
            tools:ignore="ExtraText">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img3"
                />
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_text1"
                android:text="@string/veg"
                android:textStyle="bold"
                android:textColor="#181"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginTop="85dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

             </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="140dp"
            android:layout_height="103dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="240dp"
            android:onClick="Non_Veg"
            card_view:cardCornerRadius="4dp">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/img2"
                 />
            <TextView
                android:id="@+id/info_text2"
                android:text="@string/non_veg"

                android:textStyle="bold"
                android:textColor="#Ff0000"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginTop="85dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

             </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="140dp"
            android:layout_height="102dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="360dp"
            android:onClick="Desserts"
            card_view:cardCornerRadius="4dp"
            >
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img4"

/>
            <TextView
                android:id="@+id/info_text3"
                android:text="@string/desserts"
                android:textStyle="bold"
                android:textColor="#B22222"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginTop="85dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

             </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="140dp"
            android:layout_height="102dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="360dp"
            android:onClick="Drinks"
            card_view:cardCornerRadius="4dp">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img5"
                />

            <TextView
                android:id="@+id/info_text4"
                android:text="@string/drinks"
                android:textStyle="bold"
                android:textColor="#4B0082"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginTop="85dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

             </android.support.v7.widget.CardView>
        <android.support.v4.view.ViewPager
            android:layout_height="260dp"
            android:layout_width="wrap_content"
            android:id="@+id/view_pager"
            android:layout_marginTop="-68dp"
            >
        </android.support.v4.view.ViewPager>



        <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fingerswipe"
            android:layout_marginTop="-90dp"

            android:layout_gravity="center"
            android:id="@+id/imageView"
            tools:ignore="ContentDescription"
            />


    </android.support.design.widget.CoordinatorLayout>

